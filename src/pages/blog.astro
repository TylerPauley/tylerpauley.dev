---
import Layout from '../layouts/Layout.astro';

interface BlogPost {
	title: string;
	excerpt: string;
	date: string;
	slug: string;
	tags: string[];
	readTime: string;
}

const posts: BlogPost[] = [
	{
		title: "Building a File Integrity Monitoring System",
		excerpt: "How I designed and engineered Guardian FIM, a complete HIDS tool using Python. Exploring the architecture, security considerations, and implementation challenges.",
		date: "2024-08-20",
		slug: "file-integrity-monitoring-security",
		tags: ["Cybersecurity", "Python", "HIDS"],
		readTime: "15 min read"
	},
	{
		title: "Automating Financial Reporting with Python",
		excerpt: "The story behind FinSync Automator: how I reduced weekly financial reporting from 2 hours to 5 minutes by automating data integration between Lightspeed POS and QuickBooks.",
		date: "2024-09-15",
		slug: "python-automation-financial-reporting",
		tags: ["Python", "Automation", "Data Analysis"],
		readTime: "12 min read"
	},
	{
		title: "Managing Multi-Platform Data Pipelines",
		excerpt: "Lessons learned from managing complex data pipelines across HubSpot, SamCart, Shopify, and Post Affiliate Pro. Ensuring data integrity for multi-million dollar commission programs.",
		date: "2024-07-10",
		slug: "data-pipeline-integration",
		tags: ["Data Integration", "E-Commerce", "Automation"],
		readTime: "10 min read"
	}
];
---

<Layout title="Blog - Tyler Pauley">
	<div class="blog-page">
		<div class="container">
			<header class="page-header">
				<h1 class="page-title">Blog</h1>
			<p class="page-description">
				Technical insights, project deep-dives, and learnings from cybersecurity, data analysis, and automation.
			</p>
			</header>
			<div class="posts-grid">
				{posts.map((post) => (
					<article class="post-card">
						<div class="post-meta">
							<time datetime={post.date} class="post-date">
								{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
							</time>
							<span class="post-read-time">{post.readTime}</span>
						</div>
						<h2 class="post-title">
							<a href={`/blog/${post.slug}`}>{post.title}</a>
						</h2>
						<p class="post-excerpt">{post.excerpt}</p>
						<div class="post-footer">
							<div class="post-tags">
								{post.tags.map((tag) => (
									<span class="post-tag">{tag}</span>
								))}
							</div>
							<a href={`/blog/${post.slug}`} class="post-link">
								Read more
								<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<path d="M5 12h14M12 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</article>
				))}
			</div>
		</div>
	</div>
</Layout>

<style>
	.blog-page {
		padding: 4rem 2rem;
		min-height: 80vh;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.page-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.page-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 700;
		margin-bottom: 1rem;
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.page-description {
		font-size: 1.125rem;
		color: var(--color-text-muted);
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.8;
	}

	.posts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 2rem;
	}

	.post-card {
		background: var(--color-surface-elevated);
		border: 1px solid var(--color-border);
		border-radius: 12px;
		padding: 2rem;
		transition: all 0.3s;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.post-card:hover {
		transform: translateY(-4px);
		border-color: var(--color-accent);
		box-shadow: 0 8px 32px rgba(99, 102, 241, 0.2);
	}

	.post-meta {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.post-date {
		font-size: 0.875rem;
		color: var(--color-text-muted);
		font-family: 'JetBrains Mono', monospace;
	}

	.post-read-time {
		font-size: 0.875rem;
		color: var(--color-text-muted);
	}

	.post-title {
		font-size: 1.75rem;
		font-weight: 600;
		margin: 0;
		line-height: 1.3;
	}

	.post-title a {
		color: var(--color-text);
		text-decoration: none;
		transition: color 0.2s;
	}

	.post-title a:hover {
		color: var(--color-accent);
	}

	.post-excerpt {
		color: var(--color-text-muted);
		line-height: 1.7;
		flex: 1;
	}

	.post-footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 1rem;
		flex-wrap: wrap;
		margin-top: auto;
	}

	.post-tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.post-tag {
		background: var(--color-surface);
		border: 1px solid var(--color-border);
		padding: 0.25rem 0.75rem;
		border-radius: 4px;
		font-size: 0.75rem;
		color: var(--color-text-muted);
	}

	.post-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--color-accent);
		text-decoration: none;
		font-weight: 500;
		transition: gap 0.2s;
	}

	.post-link:hover {
		gap: 0.75rem;
	}

	@media (max-width: 768px) {
		.blog-page {
			padding: 3rem 1.5rem;
		}

		.posts-grid {
			grid-template-columns: 1fr;
		}
	}
</style>

