---
interface BlogPost {
	title: string;
	excerpt: string;
	date: string;
	slug: string;
	tags: string[];
}

const posts: BlogPost[] = [
	{
		title: "Building a File Integrity Monitoring System",
		excerpt: "How I designed and engineered Guardian FIM, a complete HIDS tool using Python. Exploring the architecture, security considerations, and implementation challenges.",
		date: "2024-08-20",
		slug: "file-integrity-monitoring-security",
		tags: ["Cybersecurity", "Python", "HIDS"]
	},
	{
		title: "Automating Financial Reporting with Python",
		excerpt: "The story behind FinSync Automator: how I reduced weekly financial reporting from 2 hours to 5 minutes by automating data integration between Lightspeed POS and QuickBooks.",
		date: "2024-09-15",
		slug: "python-automation-financial-reporting",
		tags: ["Python", "Automation", "Data Analysis"]
	},
	{
		title: "Managing Multi-Platform Data Pipelines",
		excerpt: "Lessons learned from managing complex data pipelines across HubSpot, SamCart, Shopify, and Post Affiliate Pro. Ensuring data integrity for multi-million dollar commission programs.",
		date: "2024-07-10",
		slug: "data-pipeline-integration",
		tags: ["Data Integration", "E-Commerce", "Automation"]
	}
];
---

<section class="blog-preview">
	<div class="container">
		<div class="section-header">
			<h2 class="section-title">Latest Thoughts</h2>
			<p class="section-description">Technical insights, project deep-dives, and learnings from cybersecurity, data analysis, and automation</p>
		</div>
		<div class="posts-grid">
			{posts.map((post) => (
				<article class="post-card">
					<div class="post-meta">
						<time datetime={post.date} class="post-date">
							{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
						</time>
						<div class="post-tags">
							{post.tags.map((tag) => (
								<span class="post-tag">{tag}</span>
							))}
						</div>
					</div>
					<h3 class="post-title">
						<a href={`/blog/${post.slug}`}>{post.title}</a>
					</h3>
					<p class="post-excerpt">{post.excerpt}</p>
					<a href={`/blog/${post.slug}`} class="post-link">
						Read more
						<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M5 12h14M12 5l7 7-7 7"></path>
						</svg>
					</a>
				</article>
			))}
		</div>
		<div class="blog-cta">
			<a href="/blog" class="btn btn-secondary">View All Posts</a>
		</div>
	</div>
</section>

<style>
	.blog-preview {
		padding: 6rem 2rem;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-title {
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 700;
		margin-bottom: 1rem;
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.section-description {
		font-size: 1.125rem;
		color: var(--color-text-muted);
	}

	.posts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 2rem;
		margin-bottom: 3rem;
	}

	.post-card {
		background: var(--color-surface-elevated);
		border: 1px solid var(--color-border);
		border-radius: 12px;
		padding: 2rem;
		transition: all 0.3s;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.post-card:hover {
		transform: translateY(-4px);
		border-color: var(--color-accent);
		box-shadow: 0 8px 32px rgba(99, 102, 241, 0.2);
	}

	.post-meta {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	.post-date {
		font-size: 0.875rem;
		color: var(--color-text-muted);
		font-family: 'JetBrains Mono', monospace;
	}

	.post-tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.post-tag {
		background: var(--color-surface);
		border: 1px solid var(--color-border);
		padding: 0.25rem 0.75rem;
		border-radius: 4px;
		font-size: 0.75rem;
		color: var(--color-text-muted);
	}

	.post-title {
		font-size: 1.5rem;
		font-weight: 600;
		margin: 0;
	}

	.post-title a {
		color: var(--color-text);
		text-decoration: none;
		transition: color 0.2s;
	}

	.post-title a:hover {
		color: var(--color-accent);
	}

	.post-excerpt {
		color: var(--color-text-muted);
		line-height: 1.7;
		flex: 1;
	}

	.post-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--color-accent);
		text-decoration: none;
		font-weight: 500;
		transition: gap 0.2s;
	}

	.post-link:hover {
		gap: 0.75rem;
	}

	.blog-cta {
		text-align: center;
	}

	@media (max-width: 768px) {
		.blog-preview {
			padding: 4rem 1.5rem;
		}

		.posts-grid {
			grid-template-columns: 1fr;
		}
	}
</style>

